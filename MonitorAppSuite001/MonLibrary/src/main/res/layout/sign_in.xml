<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:padding="5dp"
                android:id="@+id/SI_mainLayout"
                android:visibility="gone"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/SI_layout0"
            android:layout_width="match_parent"
            android:background="@drawable/xwhite_rounded_corners"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/SI_header"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:text="@string/sign_in"
                style="@style/Title2TextStyleBlue"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/SI_spinner"
                android:layout_below="@id/SI_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <EditText
                android:id="@+id/SI_pin"
                android:layout_width="match_parent"
                android:layout_below="@id/SI_spinner"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:hint="@string/pin"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/SI_pin"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            <Button
                    android:id="@+id/SI_btnSave"
                    style="@style/ButtonSaveSmall"
                    android:layout_weight="3"
                    android:layout_alignParentRight="true"
                    android:text="@string/register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>